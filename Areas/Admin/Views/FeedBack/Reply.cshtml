@model HyperGear.Models.Feedback
@{
    ViewBag.Title = "Reply";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Email Compose</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Veltrix</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Email</a></li>
                            <li class="breadcrumb-item active">Email Compose</li>
                        </ol>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="float-right d-none d-md-block">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle waves-effect waves-light" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="mdi mdi-settings mr-2"></i> Settings
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <!-- Left sidebar -->
                    <div class="email-leftbar card">
                        <a href="@Url.Action("FeedBack","FeedBack")" class="btn btn-danger rounded btn-custom btn-block waves-effect waves-light">Hòm thư</a>
                        <div class="mail-list mt-4">
                            <a href="@Url.Action("FeedBack","FeedBack")" class="active">Thư đến<span class="ml-1">(@ViewBag.count)</span></a>
                        </div>


                        <h5 class="mt-4">Thư cần xử lý:</h5>

                        <div class="mail-list mt-4">
                            <a href="#"><span class="mdi mdi-arrow-right-drop-circle text-warning float-right"></span>Thư chờ phản hồi (@ViewBag.count1)</a>
                            <a href="#"><span class="mdi mdi-arrow-right-drop-circle text-danger float-right"></span>Thư đã hủy (@ViewBag.count0)</a>
                            <a href="#"><span class="mdi mdi-arrow-right-drop-circle text-success float-right"></span>Thư đã phản hồi (@ViewBag.count2)</a>
                        </div>
                    </div>
                    <!-- End Left sidebar -->
                    <!-- Right Sidebar -->

                    <div class="email-rightbar mb-3">

                        <div class="card">
                            <div class="card-body">

                                @using (Html.BeginForm("Reply", "FeedBack", ValidateRequestMode.Disabled))
                                {
                                    @Html.AntiForgeryToken();

                                    @Html.HiddenFor(model => model.MaFb);
                                    @Html.HiddenFor(model => model.TenKH);
                                    @Html.HiddenFor(model => model.Email);
                                    @Html.HiddenFor(model => model.Status);
                                    @Html.HiddenFor(model => model.NgayNhan);
                                    @Html.HiddenFor(model => model.NoiDung);
                                    <div class="form-group">
                                        @*<input type="email" class="form-control" placeholder="To">*@
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email", @id = "email", @name = "email", @readonly = "readonly" }, placeholder = "Gửi đến"  })
                                    </div>

                                    <div class="form-group">
                                        @*<input type="text" class="form-control" placeholder="Subject">*@
                                        @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" }, placeholder = "Tiêu đề" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextAreaFor(model => model.Reply, new { @class = "form-control", @id = "reply", @name = "reply"})
                                    </div>

                                    <div class="btn-toolbar form-group mb-0">
                                        <div class="">
                                            <a href="@Url.Action("DeleteConfirm","FeedBack", new{id = Model.MaFb})" class="btn btn-danger waves-effect waves-light mr-1"><i class="far fa-trash-alt"> Xóa thư</i></a>
                                            <a href="@Url.Action("Delete","FeedBack", new{id = Model.MaFb})" class="btn btn-success waves-effect waves-light mr-1"><i class="far fa-file-excel"></i> Hủy Thư</a>
                                            <button type="submit" class="btn btn-primary waves-effect waves-light"> <span>Gửi</span> <i class="fab fa-telegram-plane ml-1"></i> </button>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>

                    </div> <!-- end Col-9 -->

                </div>

            </div><!-- End row -->




        </div> <!-- container-fluid -->
    </div>
</div>
