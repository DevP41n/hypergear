@model HyperGear.Models.KhachHang

@{
    ViewBag.Title = "CusLogin";
    Layout = "~/Views/Shared/web/_LayoutWeb.cshtml";
}


<div class="container container-240">

    <div class="myaccount">
        <div class="row flex pd">

            <div class="account-element bd-7" style="margin-left: auto; margin-right: auto">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v1">Đăng Nhập</h1>
                </div>
                @if (TempData["Success"] != null)
                {
                    <p>@TempData["Success"].ToString()</p>
                }
            <div class="page-content">
                <p>Đăng nhập tài khoản của bạn.</p>
                @using (Html.BeginForm("CusLogin", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Tài khoản <span class="f-red">*</span></label>
                        @Html.TextBoxFor(m => m.Taikhoan, "", new { @class = "form-control", @placeholder = "Tên Tài khoản", autocomplete = "off" })
                        <label>Mật khẩu <span class="f-red">*</span></label>
                        @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>
                    <div class="flex lr">
                        <input type="submit" name="submit" class="btn btn-submit btn-gradient" value="Login" />
                        <a class="btn btn-facebook" href="@Url.Action("LoginWithFB","Account")">
                            <span class="fa fa-facebook"></span>&ensp;&ensp;Đăng nhập bằng Facebook
                        </a>
                    </div>

                    <br />
                    <br />
                    <span style="font-size:15px">
                        Nếu bạn chưa có tài khoản thì hãy?
                        <a href="@Url.Action("CusRegister","Account")" style=" text-decoration: underline;font-weight:bold">Đăng ký</a>.
                        Hoặc  <a href="@Url.Action("Forgot","Account")" style=" text-decoration: underline;font-weight:bold">quên mật khẩu</a>?
                    </span>

                }
            </div>
            </div>

        </div>
    </div>
</div>

