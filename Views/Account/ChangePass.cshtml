@model HyperGear.Models.KhachHang

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/web/_LayoutWeb.cshtml";
}

<div class="container container-240">
    <div class="myaccount trackorder">
        <ul class="breadcrumb v3">
            <li><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
            <li class="active">Tài Khoản</li>
        </ul>
        <div class="row flex pd">
            <div class="account-element bd-7">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v6">Đổi Mật Khẩu</h1>
                </div>
                <div class="page-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaKH)
                        @Html.HiddenFor(model => model.Email)
                        @Html.HiddenFor(model => model.HoTen)
                        @Html.HiddenFor(model => model.DiachiKH)
                        @Html.HiddenFor(model => model.Ngaysinh)
                        @Html.HiddenFor(model => model.Taikhoan)
                        @Html.HiddenFor(model => model.DienthoaiKH)
                        @Html.HiddenFor(model => model.Matkhau)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label>Mật khẩu cũ</label>
                            <input type="password" id="mkcu" class="form-control bdr" name="mkcu">
                            <label>Mật khẩu mới</label>
                            <input type="password" id="mkmoi" class="form-control bdr" name="mkmoi">
                            <label>Xác nhận mật khẩu</label>
                            <input type="password" id="xnmk" class="form-control bdr" name="xnmk">
                        </div>
                        <div class="flex justify-center">
                            <button type="submit" class="btn btn-submit btn-gradient">
                                Lưu mật khẩu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
